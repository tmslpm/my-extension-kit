{
  "name": "my-extension-kit",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/tmslpm/my-extension-kit"
  },
  "author": "tmslpm",
  "description": "Utility code to create VsCode extensions",
  "keywords": [
    "vscode",
    "visual-studio-code",
    "extension",
    "typescript",
    "vscode-extension",
    "development",
    "tool",
    "typescript-kit",
    "extension-kit"
  ],
  "engines": {
    "vscode": "^1.89.0"
  },
  "scripts": {
    "build": "npm pack --pack-destination=build",
    "lint": "eslint src --ext ts",
    "doc": "typedoc --tsconfig ./config/typedoc.tsconfig.json --options ./config/typedoc.json --readme ./config/typedoc.readme.md",
    "deploy": "npm run doc && git add . && git commit -m \"Deploy my-extension-kit@latest\" && git push"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5"
  }
}
